variable "token" {}
variable "cloud_id" {}
variable "zone" {}

provider "yandex" {
  token = var.token
  cloud_id = var.cloud_id
}

resource "yandex_vpc_network" "test_network" {
  name = "test-network"
}

resource "yandex_vpc_subnet" "test_subnet" {
  name = "test-subnet"
  zone = var.zone
  network_id = yandex_vpc_network.test_network.id
  v4_cidr_blocks = ["10.0.0.0/24"]
}

resource "yandex_compute_instance" "vm1" {
  name = "vm1"
  zone = var.zone
  resources {
    cores = 2
    memory = 2
  }
  boot_disk {
    initialize_params {
      image_id = "fd8d87bc-05a1-4611-a7b6-e04c6f87218c"
    }
  }
  network_interface {
    subnet_id = yandex_vpc_subnet.test_subnet.id
    nat = true
  }
}

resource "yandex_compute_instance" "vm2" {
  name = "vm2"
  zone = var.zone
  resources {
    cores = 2
    memory = 2
  }
  boot_disk {
    initialize_params {
      image_id = "fd8d87bc-05a1-4611-a7b6-e04c6f87218c"
    }
  }
  network_interface {
    subnet_id = yandex_vpc_subnet.test_subnet.id
    nat = true
  }
}

resource "yandex_lb_network_load_balancer" "test_lb" {
  name = "test-lb"
  zone = var.zone
  listener {
    name = "http"
    port = 80
    target_port = 80
    external_address_spec {}
  }
  target_group {
    name = "test-group"
    target {
      subnet_id = yandex_vpc_subnet.test_subnet.id
      instance_id = yandex_compute_instance.vm1.id
    }
    target {
      subnet_id = yandex_vpc_subnet.test_subnet.id
      instance_id = yandex_compute_instance.vm2.id
    }
  }
}
